{
  "dhp1:0.1": "Khuddakanikāya ",
  "dhp1:0.2": "Dhammapada ",
  "dhp1:0.3": "Yamakavagga ",
  "dhp1:0.4": "Cakkhupālattheravatthu ",
  "dhp1:1": "Manopubbaṅgamā dhammā, ",
  "dhp1:2": "manoseṭṭhā manomayā; ",
  "dhp1:3": "Manasā ce paduṭṭhena, ",
  "dhp1:4": "bhāsati vā karoti vā; ",
  "dhp1:5": "Tato naṁ dukkhamanveti, ",
  "dhp1:6": "cakkaṁva vahato padaṁ. ",
  "dhp2:0": "Maṭṭhakuṇḍalīvatthu ",
  "dhp2:1": "Manopubbaṅgamā dhammā, ",
  "dhp2:2": "manoseṭṭhā manomayā; ",
  "dhp2:3": "Manasā ce pasannena, ",
  "dhp2:4": "bhāsati vā karoti vā; ",
  "dhp2:5": "Tato naṁ sukhamanveti, ",
  "dhp2:6": "chāyāva anapāyinī. ",
  "dhp3:0": "Tissattheravatthu ",
  "dhp3:1": "Akkocchi maṁ avadhi maṁ, ",
  "dhp3:2": "ajini maṁ ahāsi me; ",
  "dhp3:3": "Ye ca taṁ upanayhanti, ",
  "dhp3:4": "veraṁ tesaṁ na sammati. ",
  "dhp4:1": "Akkocchi maṁ avadhi maṁ, ",
  "dhp4:2": "ajini maṁ ahāsi me; ",
  "dhp4:3": "Ye ca taṁ nupanayhanti, ",
  "dhp4:4": "veraṁ tesūpasammati. ",
  "dhp5:0": "Kāḷayakkhinīvatthu ",
  "dhp5:1": "Na hi verena verāni, ",
  "dhp5:2": "sammantīdha kudācanaṁ; ",
  "dhp5:3": "Averena ca sammanti, ",
  "dhp5:4": "esa dhammo sanantano. ",
  "dhp6:0": "Kosambakavatthu ",
  "dhp6:1": "Pare ca na vijānanti, ",
  "dhp6:2": "mayamettha yamāmase; ",
  "dhp6:3": "Ye ca tattha vijānanti, ",
  "dhp6:4": "tato sammanti medhagā. ",
  "dhp7:0": "Mahākāḷattheravatthu ",
  "dhp7:1": "Subhānupassiṁ viharantaṁ, ",
  "dhp7:2": "indriyesu asaṁvutaṁ; ",
  "dhp7:3": "Bhojanamhi cāmattaññuṁ, ",
  "dhp7:4": "kusītaṁ hīnavīriyaṁ; ",
  "dhp7:5": "Taṁ ve pasahati māro, ",
  "dhp7:6": "vāto rukkhaṁva dubbalaṁ. ",
  "dhp8:1": "Asubhānupassiṁ viharantaṁ, ",
  "dhp8:2": "Indriyesu susaṁvutaṁ; ",
  "dhp8:3": "Bhojanamhi ca mattaññuṁ, ",
  "dhp8:4": "Saddhaṁ āraddhavīriyaṁ; ",
  "dhp8:5": "Taṁ ve nappasahati māro, ",
  "dhp8:6": "Vāto selaṁva pabbataṁ. ",
  "dhp9:0": "Devadattavatthu ",
  "dhp9:1": "Anikkasāvo kāsāvaṁ, ",
  "dhp9:2": "yo vatthaṁ paridahissati; ",
  "dhp9:3": "Apeto damasaccena, ",
  "dhp9:4": "na so kāsāvamarahati. ",
  "dhp10:1": "Yo ca vantakasāvassa, ",
  "dhp10:2": "sīlesu susamāhito; ",
  "dhp10:3": "Upeto damasaccena, ",
  "dhp10:4": "sa ve kāsāvamarahati. ",
  "dhp11:0": "Sāriputtattheravatthu ",
  "dhp11:1": "Asāre sāramatino, ",
  "dhp11:2": "sāre cāsāradassino; ",
  "dhp11:3": "Te sāraṁ nādhigacchanti, ",
  "dhp11:4": "micchāsaṅkappagocarā. ",
  "dhp12:1": "Sārañca sārato ñatvā, ",
  "dhp12:2": "asārañca asārato; ",
  "dhp12:3": "Te sāraṁ adhigacchanti, ",
  "dhp12:4": "sammāsaṅkappagocarā. ",
  "dhp13:0": "Nandattheravatthu ",
  "dhp13:1": "Yathā agāraṁ ducchannaṁ, ",
  "dhp13:2": "vuṭṭhī samativijjhati; ",
  "dhp13:3": "Evaṁ abhāvitaṁ cittaṁ, ",
  "dhp13:4": "rāgo samativijjhati. ",
  "dhp14:1": "Yathā agāraṁ suchannaṁ, ",
  "dhp14:2": "vuṭṭhī na samativijjhati; ",
  "dhp14:3": "Evaṁ subhāvitaṁ cittaṁ, ",
  "dhp14:4": "rāgo na samativijjhati. ",
  "dhp15:0": "Cundasūkarikavatthu ",
  "dhp15:1": "Idha socati pecca socati, ",
  "dhp15:2": "Pāpakārī ubhayattha socati; ",
  "dhp15:3": "So socati so vihaññati, ",
  "dhp15:4": "Disvā kammakiliṭṭhamattano. ",
  "dhp16:0": "Dhammikaupāsakavatthu ",
  "dhp16:1": "Idha modati pecca modati, ",
  "dhp16:2": "Katapuñño ubhayattha modati; ",
  "dhp16:3": "So modati so pamodati, ",
  "dhp16:4": "Disvā kammavisuddhimattano. ",
  "dhp17:0": "Devadattavatthu ",
  "dhp17:1": "Idha tappati pecca tappati, ",
  "dhp17:2": "Pāpakārī ubhayattha tappati; ",
  "dhp17:3": "“Pāpaṁ me katan”ti tappati, ",
  "dhp17:4": "Bhiyyo tappati duggatiṁ gato. ",
  "dhp18:0": "Sumanadevīvatthu ",
  "dhp18:1": "Idha nandati pecca nandati, ",
  "dhp18:2": "Katapuñño ubhayattha nandati; ",
  "dhp18:3": "“Puññaṁ me katan”ti nandati, ",
  "dhp18:4": "Bhiyyo nandati suggatiṁ gato. ",
  "dhp19:0": "Dvesahāyakabhikkhuvatthu ",
  "dhp19:1": "Bahumpi ce saṁhita bhāsamāno, ",
  "dhp19:2": "Na takkaro hoti naro pamatto; ",
  "dhp19:3": "Gopova gāvo gaṇayaṁ paresaṁ, ",
  "dhp19:4": "Na bhāgavā sāmaññassa hoti. ",
  "dhp20:1": "Appampi ce saṁhita bhāsamāno, ",
  "dhp20:2": "Dhammassa hoti anudhammacārī; ",
  "dhp20:3": "Rāgañca dosañca pahāya mohaṁ, ",
  "dhp20:4": "Sammappajāno suvimuttacitto; ",
  "dhp20:5": "Anupādiyāno idha vā huraṁ vā, ",
  "dhp20:6": "Sa bhāgavā sāmaññassa hoti. ",
  "dhp20:7": "Yamakavaggo paṭhamo. "
}